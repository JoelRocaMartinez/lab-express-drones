<h2>Update the drone</h2>

<form method="POST" action="/drones/{{result._id}}/edit" >
  <div class="form-group">
    <label for="droneName">Name</label>
    <input name="name" type="text" class="form-control" id="droneName" aria-describedby="emailHelp" value="{{result.name}}">
  </div>
  <div class="form-group">
    <label for="droneProp">Number of propellers</label>
    <input name="propellers" type="number" class="form-control" id="droneProp" value="{{result.propellers}}">
  </div>
  <div class="form-group">
    <label for="droneSpeed">Max speed</label>
    <input name="maxSpeed" type="number" class="form-control" id="droneSpeed" value="{{result.maxSpeed}}">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>